@model TunningJap.Data.Car

@{
    ViewData["Title"] = "Car Details";
}

<div class="container">
    <h1 class="mt-4">Car Details</h1>

    <div class="card shadow-sm mt-4">
        <div class="row g-0">
            <!-- Car Image -->
            <div class="col-md-6">
                <img src="@Model.ImagePath" class="img-fluid rounded-start" alt="@Model.Name" style="max-height: 400px; width: 100%; object-fit: cover;">
            </div>
            <!-- Car Details -->
            <div class="col-md-6">
                <div class="card-body">
                    <h2 class="card-title">@Model.Name</h2>
                    <h5 class="card-subtitle mb-3 text-muted">@Model.Title</h5>
                    <p class="card-text">@Model.Description</p>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Title</dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>