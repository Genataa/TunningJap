@model TunningJap.Data.Car

@{
    ViewData["Title"] = "Car Details";
}

<div class="container mt-5">
    <h1 class="text-center text-success mb-4">Car Details</h1>

    <!-- Card Container -->
    <div class="card shadow-lg rounded-lg overflow-hidden transform-hover">
        <div class="row g-0">
            <!-- Car Image -->
            <div class="col-md-6">
                <img src="@Model.ImagePath" class="img-fluid rounded-start" alt="@Model.Name" style="max-height: 400px; width: 100%; object-fit: cover;">
            </div>
            <!-- Car Details -->
            <div class="col-md-6 bg-light">
                <div class="card-body p-4">
                    <h2 class="card-title text-success">@Model.Name</h2>
                    <h5 class="card-subtitle mb-3 text-muted">@Model.Title</h5>
                    <p class="card-text mb-4" style="font-size: 1.1rem; color: #555;">@Model.Description</p>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4 text-dark">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4 text-dark">Title</dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <dt class="col-sm-4 text-dark">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-4 d-flex justify-content-between">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-lg btn-outline-success shadow-sm">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-lg btn-outline-secondary shadow-sm">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>