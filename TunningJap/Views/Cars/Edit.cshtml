@model TunningJap.Data.Car

@{
    ViewData["Title"] = "Edit Car";
}

<div class="container mt-5">
    <h1 class="text-center text-success mb-4">Edit Car</h1>

    <div class="card shadow-lg rounded-lg transform-hover">
        <div class="card-body">
            <h4 class="card-title text-success">Edit Car Details</h4>
            <hr />

            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <!-- Name Field -->
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Car Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter car name" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Description Field -->
                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" placeholder="Enter car description" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Title Field -->
                <div class="form-group mb-3">
                    <label asp-for="Title" class="form-label">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter car title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!-- ImagePath Field with Preview -->
                <div class="form-group mb-3">
                    <label asp-for="ImagePath" class="form-label">Image URL</label>
                    <input asp-for="ImagePath" class="form-control" placeholder="Enter image URL" id="imagePathInput" />
                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                    <div class="mt-2">
                        <img src="@Model.ImagePath" id="imagePreview" class="img-fluid rounded" alt="Car Image" style="max-height: 200px; display: none;" />
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="form-group mt-4 text-center">
                    <button type="submit" class="btn btn-success btn-lg px-4 py-2">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Back to List Button -->
    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>
