@model TunningJap.Data.Wheels

@{
    ViewData["Title"] = "Wheel Details";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Wheel Details</h1>

    <div class="card shadow-lg">
        <div class="row g-0">
            <!-- Image Section -->
            <div class="col-md-6">
                <img src="@Model.ImagePath" class="img-fluid rounded-start" alt="@Model.Name" style="height: 300px; object-fit: cover;">
            </div>

            <!-- Details Section -->
            <div class="col-md-6">
                <div class="card-body">
                    <h4 class="card-title">@Model.Name</h4>
                    <h5 class="card-subtitle mb-3 text-muted">@Model.Description</h5>

                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Description:</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <!-- Removed Image Path display -->
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning px-4 py-2">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>