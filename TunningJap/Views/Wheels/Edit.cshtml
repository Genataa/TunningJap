@model TunningJap.Data.Wheels

@{
    ViewData["Title"] = "Edit Wheel";
}

<div class="container mt-4">
    <!-- Main Title Section -->
    <h2 class="text-center text-success mb-4">@ViewData["Title"]</h2>

    <div class="card shadow-lg p-4">
        <div class="card-body">
            <h4 class="card-title">Edit Wheel Details</h4>
            <hr />

            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <!-- Name Field -->
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Wheel Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter wheel name" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Description Field -->
                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" placeholder="Enter wheel description" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

           

                <!-- Image Path with Preview -->
                <div class="form-group mb-3">
                    <label asp-for="ImagePath" class="form-label">Image URL</label>
                    <input asp-for="ImagePath" class="form-control" placeholder="Enter image URL" id="imagePathInput" />
                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                    <div class="mt-2">
                        <img src="@Model.ImagePath" id="imagePreview" class="img-fluid rounded" alt="Wheel Image" style="max-height: 200px; display: none;" />
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Back to List Button -->
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>
