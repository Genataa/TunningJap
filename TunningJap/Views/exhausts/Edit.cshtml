@model TunningJap.Data.exhaust

@{
    ViewData["Title"] = "Edit Exhaust";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Edit Exhaust</h1>

    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card shadow-lg p-4">
                <div class="card-body">
                    <h4 class="card-title text-center mb-4">Exhaust Details</h4>

                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Name Field -->
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter exhaust name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Description Field -->
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" placeholder="Enter exhaust description" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- ImagePath Field -->
                        <div class="form-group mb-3">
                            <label asp-for="ImagePath" class="form-label">Image URL</label>
                            <input asp-for="ImagePath" class="form-control" placeholder="Enter image URL" />
                            <span asp-validation-for="ImagePath" class="text-danger"></span>
                        </div>

                        <!-- Hidden Id Field -->
                        <input type="hidden" asp-for="Id" />

                        <!-- Save Button -->
                        <div class="form-group text-center">
                            <input type="submit" value="Save Changes" class="btn btn-success btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
