@model TunningJap.Data.Coilovers

@{
    ViewData["Title"] = "Create Coilover";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Create Coilover</h1>

    <div class="card shadow-lg">
        <div class="card-body">
            <h4 class="card-title text-center">Add New Coilover</h4>
            <hr />

            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Name Field -->
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Coilover Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter Coilover Name" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Description Field -->
                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter Description" required></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Image URL Field -->
                <div class="form-group mb-3">
                    <label asp-for="ImagePath" class="form-label">Image URL</label>
                    <input asp-for="ImagePath" class="form-control" placeholder="Enter Coilover Image URL" required />
                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group mt-4 text-center">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-plus-circle"></i> Create Coilover
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Back to List Button -->
    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}